@model User
@{
    ViewBag.Title = "Update";
}

    <div class="page">
        <div id="updateUser" class="row">
            <div class="col-8 m-3">
                <form method="post">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FullName)
                        @Html.TextBoxFor(m => m.FullName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FullName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                    </div>
                    <div class="parol form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Type)
                        <select name="Type" class="form-control">
                            @(Model.Type == UserType.admin ? Html.Raw("<option selected value='0'>Admin</option>") : Html.Raw("<option value='0'>Admin</option>"))
                            @(Model.Type == UserType.reception ? Html.Raw("<option selected value='1'>Restaurant</option>") : Html.Raw("<option value='1'>Restaurant</option>"))
                            @(Model.Type == UserType.restaurant ? Html.Raw("<option selected value='2'>Reception</option>") : Html.Raw("<option value='2'>Reception</option>"))
                        </select>
                        @Html.ValidationMessageFor(m => m.Type, null, new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary" @Url.Action("create", "users")>Əlavə et</button>
                </form>
            </div>
        </div>
    </div>