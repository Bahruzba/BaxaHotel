@model Room
@{
    ViewBag.Title = "Create";
}

    <div class="page">
        <div class="row">
            <div class="col-8 m-3">
                <form method="post">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Number)
                        @Html.TextBoxFor(m => m.Number, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Number, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price)
                        @Html.TextBoxFor(m => m.Price, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PairPersonBedroom)
                        @Html.TextBoxFor(m => m.PairPersonBedroom, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PairPersonBedroom, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.SinglePersonBedroom)
                        @Html.TextBoxFor(m => m.SinglePersonBedroom, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SinglePersonBedroom, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ChildBedroom)
                        @Html.TextBoxFor(m => m.ChildBedroom, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ChildBedroom, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Status)
                        <select name="Status" class="form-control">
                            <option value="true">Aktiv</option>
                            <option value="false">Passiv</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.Status, null, new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary" @Url.Action("create", "rooms")>Əlavə et</button>
                </form>
            </div>
        </div>
    </div>